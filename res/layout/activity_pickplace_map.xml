<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical"
    android:padding="1dp">

  
     <fragment
        android:id="@+id/mapactivity_map"
          class="com.google.android.gms.maps.MapFragment"
         android:name="com.cmu.timball.ActivityPickPlace"
       android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

      <Button 
	            android:layout_margin="5dip"
	        android:id="@+id/apm_btnDone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Done"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/apptheme_btn_default_holo_light"
	        style="@android:style/TextAppearance.Medium"
	        android:textColor="@color/btn_txt"
	        />
      <Button 
	            android:layout_margin="5dip"
	        android:id="@+id/apm_btnClear"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Clear"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/apptheme_btn_default_holo_light"
	        style="@android:style/TextAppearance.Medium"
	        android:textColor="@color/btn_txt"
	        />
</RelativeLayout>
